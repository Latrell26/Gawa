<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.FirstPage"
             Title="FirstPage"
             BackgroundColor="White"
             Shell.NavBarIsVisible="False">
    <VerticalStackLayout Spacing="20" Padding="20" HorizontalOptions="Center">

        <Image Source="logo.png"
               HeightRequest="100"
               WidthRequest="100"
               Scale="1.2"
               HorizontalOptions="Center"
               Margin="0,150,0,0"/>

        <Label 
            Text="Hello!"
            FontSize="35"
            FontAttributes="Bold"
            HorizontalOptions="Center"
            TextColor="Black"
            Margin="0,0,0,0"/>

        <Label  
        Text="Welcome! GAWA is an artwork app for creating and sharing masterpieces."
        FontSize="14"
        HorizontalOptions="Center"
        HorizontalTextAlignment="Center"
        TextColor="Gray"
        WidthRequest="250"
        LineBreakMode="WordWrap"
        Margin="0,-10,0,50"/>

        <Button Text="Log in"
                FontSize="17"
                FontAttributes="Bold"
                BackgroundColor="#4120a9"
                TextColor="White"
                HeightRequest="30"
                WidthRequest="250"
                CornerRadius="30"
                HorizontalOptions="Center"
                Clicked="OnLoginClicked"/>

        <Button Text="Sign up"
                FontSize="17"
                FontAttributes="Bold"
                BackgroundColor="Transparent"
                TextColor="#4120a9"
                HeightRequest="30"
                WidthRequest="250"
                CornerRadius="30"
                HorizontalOptions="Center"
                Clicked="OnSignUpClicked"
                BorderColor="#4120a9"
                BorderWidth="1"/>
    </VerticalStackLayout>
</ContentPage>
