<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.SavePage"
             Title="SavePage"
             BackgroundColor="White"
             NavigationPage.HasNavigationBar="False"
             Shell.NavBarIsVisible="False"
             xmlns:local="clr-namespace:MauiApp2">
    <Grid>
        <VerticalStackLayout Padding="10,10" Spacing="10">
            
            <local:NotificationView/>

        </VerticalStackLayout>
        <Label Text="Saved" FontSize="18" FontAttributes="Bold"
         TextColor="Black" HorizontalTextAlignment="Center"
         Margin="0,20,0,0"/>
        <ScrollView Padding="0,0" VerticalOptions="FillAndExpand" Grid.Row="1" Margin="04,60,0,0" VerticalScrollBarVisibility="Never">
            <VerticalStackLayout HorizontalOptions="Center" Spacing="10">

                <HorizontalStackLayout Spacing="5" HorizontalOptions="Center">
                    <Frame WidthRequest="185" HeightRequest="350" BackgroundColor="black"
                    CornerRadius="20"  BorderColor="Transparent"/>
                    <Frame WidthRequest="185" HeightRequest="350" BackgroundColor="black"
                    CornerRadius="20" BorderColor="Transparent"/>
                </HorizontalStackLayout>

                <HorizontalStackLayout Spacing="5" HorizontalOptions="Center">
                    <Frame WidthRequest="185" HeightRequest="350" BackgroundColor="#CCCCCC"
                    CornerRadius="20" BorderColor="Transparent"/>
                    <Frame WidthRequest="185" HeightRequest="350" BackgroundColor="#CCCCCC"
                    CornerRadius="20" BorderColor="Transparent"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout Spacing="5" HorizontalOptions="Center">
                    <Frame WidthRequest="185" HeightRequest="350" BackgroundColor="#CCCCCC"
                    CornerRadius="20" BorderColor="Transparent"/>
                    <Frame WidthRequest="185" HeightRequest="350" BackgroundColor="#CCCCCC"
                    CornerRadius="20" BorderColor="Transparent"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>