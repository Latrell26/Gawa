<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.EditProfilePage"
             Title="EditProfilePage"
             NavigationPage.HasNavigationBar="False"
             Shell.NavBarIsVisible="False"
             xmlns:local="clr-namespace:MauiApp2"
             BackgroundColor="White">

    <AbsoluteLayout>

        <!-- Main Content -->
        <ScrollView AbsoluteLayout.LayoutBounds="0,0,1,1"
                    AbsoluteLayout.LayoutFlags="All">
            <VerticalStackLayout Padding="10" Spacing="20">

                <Label Text="Edit Your Profile" 
                       FontSize="24" 
                       HorizontalOptions="Center" />

                <!-- Profile Image -->
                <AbsoluteLayout HorizontalOptions="Center" HeightRequest="200" WidthRequest="200">
                    <Frame WidthRequest="200"
                           HeightRequest="200"
                           CornerRadius="100"
                           Padding="0"
                           IsClippedToBounds="True"
                           BorderColor="Transparent"
                           AbsoluteLayout.LayoutBounds="0,0,1,1"
                           AbsoluteLayout.LayoutFlags="All">
                        <Image x:Name="profileImagePreview"
                               Source="{Binding ProfilePictureUrl}"
                               WidthRequest="200"
                               HeightRequest="200"
                               Aspect="AspectFill" />
                    </Frame>

                    <Button x:Name="plusIcon"
                            Text="+"
                            FontSize="24"
                            WidthRequest="50"
                            HeightRequest="50"
                            CornerRadius="25"
                            BackgroundColor="#f1f1f1"
                            TextColor="Black"
                            AbsoluteLayout.LayoutBounds="1,1,50,50"
                            AbsoluteLayout.LayoutFlags="PositionProportional"
                            Clicked="OnChooseImageClicked" />
                </AbsoluteLayout>

                <!-- Name Entry -->
                <Label Text="Enter Name"
                       TextColor="Black"
                       FontAttributes="Bold"
                       Margin="0,10,0,-20"/>

                <Entry x:Name="nameEntry"
                       Placeholder="Enter your name"
                       MaxLength="10"
                       Text="{Binding UserName}"
                       FontSize="16"
                       TextColor="Black"/>
                <BoxView HeightRequest="1"
                         BackgroundColor="Black"
                         Margin="0,-20,0,0"/>

                <Button Text="Done"
                        Clicked="OnDoneButtonClicked"
                        BackgroundColor="#1B56FD"
                        TextColor="White"
                        FontAttributes="Bold"
                        CornerRadius="20"
                        HorizontalOptions="End" />
            </VerticalStackLayout>
        </ScrollView>

        <!-- ✅ Back Button (now inside AbsoluteLayout!) -->
        <Frame HeightRequest="50"
               WidthRequest="50"
               CornerRadius="15"
               Padding="5"
               BackgroundColor="#f1f1f1"
               BorderColor="Transparent"
               HasShadow="False"
               AbsoluteLayout.LayoutFlags="PositionProportional"
               AbsoluteLayout.LayoutBounds="0.01,0.05,-1,1"
               Scale="0.9">
            <Image Source="back.png"
                   HeightRequest="40"
                   WidthRequest="40">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnBackButtonTapped"/>
                </Image.GestureRecognizers>
            </Image>
        </Frame>

    </AbsoluteLayout>
</ContentPage>
