<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.ProfilePage"
             Title="ProfilePage"
             NavigationPage.HasNavigationBar="False"
             Shell.NavBarIsVisible="False"
             xmlns:local="clr-namespace:MauiApp2">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <local:NotificationView Grid.Row="0" Padding="10,10"/>

        <ScrollView Grid.Row="1" VerticalScrollBarVisibility="Never">
            <FlexLayout Direction="Column"
                AlignItems="Center"
                JustifyContent="Center">

                <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                    <Image Source="frame3.png" WidthRequest="100" HeightRequest="140" Scale="1.8"/>

                    <Label x:Name="userNameLabel" FontSize="29" FontAttributes="Bold" 
                   TextColor="Black" HorizontalTextAlignment="Center" Margin="0,10,0,15"/>

                    <Button Text="Edit Profile" BackgroundColor="#1B56FD" TextColor="White" 
                    WidthRequest="120" CornerRadius="30" FontAttributes="Bold"/>
                </VerticalStackLayout>

                <ScrollView Padding="0" VerticalOptions="FillAndExpand" Margin="0,10,0,0" VerticalScrollBarVisibility="Never">
                    <CollectionView ItemsSource="{Binding Images}">
                        <CollectionView.ItemsLayout>
                            <GridItemsLayout Orientation="Vertical" Span="2" VerticalItemSpacing="5" HorizontalItemSpacing="0" />
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame BackgroundColor="Transparent"
                                CornerRadius="20" 
                                BorderColor="Transparent"
                                HasShadow="False"
                                Padding="0"
                                Margin="5">
                                    <Image Source="{Binding ImageUrl}" 
                                    Aspect="AspectFill" 
                                    WidthRequest="180"
                                    HeightRequest="{Binding ImageHeight}" 
                                    HorizontalOptions="Fill"
                                    VerticalOptions="Fill">
                                        <Image.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="OnImageTapped" CommandParameter="{Binding .}" />
                                        </Image.GestureRecognizers>
                                    </Image>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </ScrollView>
            </FlexLayout>
        </ScrollView>
    </Grid>
</ContentPage>
